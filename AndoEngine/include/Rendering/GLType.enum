  - { name: USampler1D, conv: [ GL_UNSIGNED_INT_SAMPLER_1D ] }
  - { name: USampler2D, conv: [ GL_UNSIGNED_INT_SAMPLER_2D ] }
  - { name: USampler3D, conv: [ GL_UNSIGNED_INT_SAMPLER_3D ] }
  - { name: USamplerCube, conv: [ GL_UNSIGNED_INT_SAMPLER_CUBE ] }

  - { name: Int_2_10_10_10_REV, conv: [ GL_INT_2_10_10_10_REV ] }
  - { name: UInt_2_10_10_10_REV, conv: [ GL_UNSIGNED_INT_2_10_10_10_REV ] }
  - { name: UInt_10F_11F_11F_REV, conv: [ GL_UNSIGNED_INT_10F_11F_11F_REV ] }
